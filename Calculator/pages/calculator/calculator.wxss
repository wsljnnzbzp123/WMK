  width: 750rpx;
  height: 380rpx;
}
.big{
  font-size: 120rpx;
  float: right;
  display: block;
  margin-top: 210rpx;
  margin-right: 60rpx;
}
.lit{
  float: left;
  margin-top: 130rpx;
